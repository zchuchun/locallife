<!-- 轮播图 -->
<swiper indicator-dots autoplay interval="{{3000}}" circular	>
  <swiper-item wx:for="{{swiperList}}" wx:key="id">
    <image src="{{item.image}}"></image>
  </swiper-item>
</swiper>

<!-- 导航 -->
<view class="nav">
<navigator url="/pages/list/list?id={{item.id}}&name={{item.name}}" class="item" wx:for="{{navList}}" wx:key="id">
<image src="{{item.icon}}"></image>
<text>{{item.name}}</text>
</navigator>
</view>


<!-- 商家推荐 -->
<view class="recommend ">
<image src="../../assets/images/link-01.png"></image>
<image src="../../assets/images/link-02.png"></image>
</view>