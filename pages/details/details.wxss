/* 轮播图 */
swiper{
  height:580rpx;
  width:750rpx;
}
swiper image{
  height:580rpx;
  width:750rpx;
}

/* 商家详情 */
.details{
  padding:30rpx;
  color:rgb(134, 133, 133);
  font-size:28rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.details .title{
  font-size:40rpx;
  color:#000;
  margin-bottom:10rpx;
}
.score{
  position: absolute;
  top:20rpx;
  right:20rpx;
  padding:0 20rpx;
  background-color: #EE523D;
  color:#fff;
  height:40rpx;
  border-radius:20rpx;

}

/* 评论 */
.comments{
  padding:30rpx;
  font-size: 28rpx;
  color:rgb(56, 56, 56);
  position: relative;
  display: flex;
  flex-direction: column;
}
.comments .username{
  font-size: 32rpx;
  margin-top:20rpx;
}
.comments .date{
  align-self: flex-end;
  margin-top:-42rpx;

}
.comments .rating{
position: absolute;
right:30rpx;
top:0;
color:red;
}
.comments .content{
  margin-top:20rpx;
  margin-bottom:20rpx;
}
.i{
  width:110rpx;
  height:110rpx;
  margin-right:20rpx;
}